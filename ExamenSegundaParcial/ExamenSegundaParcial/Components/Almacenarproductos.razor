@page "/almacenarproductos"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations

<h1>Almacen de productos</h1>


<EditForm Model="newProducto" FormName="formProductos" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />
    @if (verAlerta)
    {
        <div class="alert alert-danger" role="alert">
            El número de inventario se encuentra registrado. Debe ser único.
        </div>
    }
    <div class="form-group">
        <label for="inventario">Inventario</label>
        <div>
            <InputNumber class="form-control" id="inventario" @bind-Value="newProducto.Id" />
            <ValidationMessage For="@(()=>newProducto.Id)" />
        </div>
    </div>
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <div>
            <InputText class="form-control" id="nombre" @bind-Value="newProducto.Nombre" />
            <ValidationMessage For="@(()=>newProducto.Nombre)" />
        </div>
    </div>
    <div class="form-group">
        <label>Departamento</label>
        <div>
            <InputRadioGroup class="form-control" id="frutas" @bind-Value="newProducto.Departamento">
                <InputRadio class="form-check-input"
                            id="frutas"
                            Value="@("Frutas")" />
                <label for="rdbFrutas"
                       class="form-check-inline">Frutas</label>
            </InputRadioGroup>
            <InputRadioGroup class="form-control" id="verd" @bind-Value="newProducto.Departamento">
                <InputRadio class="form-check-input"
                            id="verd"
                            Value="@("Verduras")" />
                <label for="rdbFrutas"
                       class="form-check-inline">Verduras</label>
            </InputRadioGroup>
            <InputRadioGroup class="form-control" id="lacteos" @bind-Value="newProducto.Departamento">
                <InputRadio class="form-check-input"
                            id="lacteos"
                            Value="@("Lácteos")" />
                <label for="rdbFrutas"
                       class="form-check-inline">Lácteos</label>
            </InputRadioGroup>
            <ValidationMessage For="@(()=>newProducto.Departamento)" />
        </div>
    </div>
    @if (editarProducto)
    {
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <button type="button" class="btn btn-danger" @onclick="Reset">Cancelar</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Guardar</button>
    }
</EditForm>
@if (List)
{
    <button type="button" class="btn btn-secondary" @onclick="() => List = false">Existencias</button>
}
else
{
    <button type="submit" class="btn btn-secondary" @onclick="() => List = true">Listado</button>
}

@if (productos.Any())
{
    @if (List)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Inventario</th>
                    <th>Nombre</th>
                    <th>Departamento</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in productos)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Departamento</td>
                        <td>
                            <button  class="btn btn-danger btn-sm btn-danger" @onclick="() => Eliminar(item)">
                                Eliminar
                            </button>
                            <button class="btn btn-secondary btn-sm btn-secondary" @onclick="() => Editar(item.Id)">
                                    Editar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Frutas</th>
                    <th>Verduras</th>
                    <th>Lácteos</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@productos.Count(p => p.Departamento == "Frutas")</td>
                    <td>@productos.Count(p => p.Departamento == "Verduras")</td>
                    <td>@productos.Count(p => p.Departamento == "Lácteos")</td>
                </tr>
            </tbody>
        </table>
    }
}

@code {
    private List<Producto> productos = new List<Producto>();
    private Producto newProducto = new Producto();
    private bool verAlerta = false;
    private bool editarProducto = false;
    private bool List = true;
    private int idEdit;

    void Guardar()
    {
        if (!editarProducto)
        {
            if (productos.Any(p => p.Id == newProducto.Id))
            {
                verAlerta = true;
            }
            else
            {
                productos.Add(newProducto);
                newProducto = new Producto();
                verAlerta = false;
                editarProducto = false;
            }
        }
        else
        {
            if (productos.Any(p => p.Id == newProducto.Id && p.Id != idEdit))
            {
                verAlerta = true;
            }
            else
            {
                Producto productoAux = productos.Where(nombreDeProducto => nombreDeProducto.Id == idEdit).First();
                productoAux.Nombre = newProducto.Nombre;
                productoAux.Departamento = newProducto.Departamento;
                productoAux.Id = newProducto.Id;
                newProducto = new Producto();
                verAlerta = false;
                editarProducto = false;
            }
        }
    }

    void Eliminar(Producto producto)
    {
        productos.Remove(producto);
    }

    void Reset() 
    {
        newProducto = new Producto();
        verAlerta = false;
        editarProducto = false;
    }

    void Editar(int id)
    {
        verAlerta = false;
        editarProducto = true;
        Producto product = productos.Where(prodcutF => prodcutF.Id == id).First();
        newProducto.Id = product.Id;
        newProducto.Nombre = product.Nombre;
        newProducto.Departamento = product.Departamento;
        idEdit = id;
    }
}